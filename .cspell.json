{
  "version": "0.2",
  "gitignoreRoot": ".",
  "useGitignore": true,
  "dictionaryDefinitions": [
    {
      "name": "project-dictionary",
      "path": "./.github/.cspell/dictionary.txt",
      "addWords": true
    }
  ],
  "dictionaries": ["project-dictionary"],
  "ignoreRegExpList": [
    // Copyright notice
    "Copyright (\\(c\\) )?.*",
    // GHA actions/workflows
    "uses: .+@",
    // GHA context (repo name, owner name, etc.)
    "github.\\w+ (=|!)= '.+'",
    // GH username
    "( |\\[)@[\\w_-]+",
    // Git config username
    "git config user.name .*",
    // Cargo.toml authors
    "authors *= *\\[.*\\]",
    "\".* <[\\w_.+-]+@[\\w.-]+>\""
  ],
  "ignorePaths": [
    // Licenses
    "**/LICENSE*",
    // Binaries
    "**/*.png",
    "**/*.mov"
  ]
}
